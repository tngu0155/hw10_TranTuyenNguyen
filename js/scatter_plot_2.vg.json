{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "title": "COVID-19 Recovered Cases per Country",
    "data": {
      "url": "data/country_wise_latest.csv"
    },
    "params": [
      {
        "name": "Region_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Eastern Mediterranean",
            "Americas",
            "Europe",
            "Africa",
            "South-East Asia",
            "Western Pacific"
          ],
          "labels": [
            "Show All",
            "Eastern Mediterranean",
            "Americas",
            "Europe",
            "Africa",
            "South-East Asia",
            "Western Pacific"
          ],
          "name": "Region Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.Recovered > 0"},
      {
        "filter": "Region_selection == null || datum.WHORegion == Region_selection"
      }
    ],
    "encoding": {
      "x": {
        "field": "Confirmed",
        "type": "quantitative",
        "title": "Total Cases",
        "axis": {"tickCount": 7},
        "scale": {"type": "log", "domain": [1, 10000000]}
      },
      "y": {
        "field": "Recovered",
        "type": "quantitative",
        "axis": {"tickCount": 6},
        "title": "Total Recovered Cases",
        "scale": {"type": "log", "domain": [1, 10000000]}
      }
    },
    "layer": [
      {
        "selection": {
          "continent_highlight": {
            "type": "multi",
            "fields": ["WHORegion"],
            "bind": "legend"
          }
        },
        "mark": "circle",
        "encoding": {
          "color": {
            "field": "WHORegion",
            "title": "WHO Region",
            "type": "nominal",
            "scale": {
              "domain": [
                "Eastern Mediterranean",
                "Americas",
                "Europe",
                "Africa",
                "South-East Asia",
                "Western Pacific"
              ],
              "range": [
                "#e41a1c",
                "#984ea3",
                "#ff7f00",
                "green",
                "#377eb8",
                "#a65628"
              ]
            }
          },
          "opacity": {
            "condition": {"selection": "continent_highlight", "value": 0.6},
            "value": 0.2
          },
          "tooltip": [
            {"field": "Country/Region", "type": "nominal"},
            {"field": "Confirmed", "type": "quantitative", "format": ","},
            {"field": "New recovered", "type": "quantitative", "format": ","},
            {"field": "Recovered", "type": "quantitative", "format": ","},
            {"field": "WHORegion", "type": "nominal", "title":"Region"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "Country/Region", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['Country/Region'] == 'China' || datum['Country/Region'] == 'Canada' || datum['Country/Region'] == 'Australia' || datum['Country/Region'] == 'New Zealand' || datum['Country/Region'] == 'Germany' || datum['Country/Region'] == 'United Kingdom' ||  datum['Country/Region'] == 'United States of America'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "Country/Region", "type": "nominal"},
            {"field": "Confirmed", "type": "quantitative", "format": ","},
            {"field": "New recovered", "type": "quantitative", "format": ","},
            {"field": "Recovered", "type": "quantitative", "format": ","},
            {"field": "WHORegion", "type": "nominal", "title":"Region"}
          ]
        }
      }
    ]
  }